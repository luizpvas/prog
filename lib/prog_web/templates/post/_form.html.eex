<label class="field">
  <%= gettext("Título") %>
  <%= text_input @f, :title %>
  <%= error_tag @f, :title %>
</label>

<label class="field">
  <%= gettext("Conteúdo") %>
  <%= textarea @f, :body %>
  <%= error_tag @f, :body %>
</label>

<label class="field">
  <%= gettext("Data de publicação") %>
  <%= date_input @f, :published_at %>
  <%= error_tag @f, :published_at %>
</label>
